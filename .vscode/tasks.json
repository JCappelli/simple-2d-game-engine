{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp.exe build main",
			"command": "g++.exe",
			"args": [
				"-Wall",
				"-std=c++17",
				"-I${workspaceFolder}\\lib\\SDL\\Windows\\include",
				"-L${workspaceFolder}\\lib\\SDL\\Windows\\lib",
				"-o",
				"${workspaceFolder}\\build\\test.exe",
				"${workspaceFolder}\\src\\main.cpp",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: gcc from user PATH"
		}
	]
}